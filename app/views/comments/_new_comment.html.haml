.media.comment.new_comment
  = form_for(commentable.comments.build, turboboost: true) do |form|
    = form.hidden_field :commentable_type
    = form.hidden_field :commentable_id

    .media-left.avatar= user_avatar(current_user, size: 24)
    .media-body
      %small.comment-header.comment-tools
        .comment-author= link_to current_user.title, current_user
      .comment-text
        = form.text_area :text, placeholder: t(:enter_new_comment_here), class: 'form-control', data: {user_titles_path: autocomplete_title_users_path}
      .comment-tools
        = form.submit t(:submit_comment), class: 'submit_comment btn btn-primary btn-sm right'
        
