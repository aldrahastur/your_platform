%span.vertical_nav.vertical_menu.sidebar-nav#vertical_nav{data: {new_menu_feature: can?(:use, :new_menu_feature) ? "true" : nil}}
  %ul.nav.nav-pills.nav-stacked
    = vertical_menu_for @navable
  - if @navable && (can?(:create_page_for, @navable) || can?(:create_group_for, @navable))
    %p= add_structureable_button(@navable)

- if @navable && (not @navable.public?)
  = render partial: 'last_seen_activities/index'
  = render partial: 'layouts/recent_navables'
  = render partial: 'layouts/recommended_navables'