.row
  .col-sm-8
    .card
      .card-body
        %vue_post_list_group{':posts': [post].collect { |post| post.as_json.merge({author: post.author.as_json.merge({path: (polymorphic_path(post.author) if can?(:read, post.author))}), attachments: post.attachments.as_json}, groups: (post.parent_groups + [post.group] - [nil]).as_json) }.to_json}
  .col-sm-4
    .card
      .card-header
        %h3.mt-0 Empfänger
      .card-body
        - for group in post.groups
          .mb-2.d-flex.align-items-center
            .mr-2= group_avatar group, class: 'avatar-sm'
            = group.title
        .mt-3
          = ajax_toggle post, :publish_on_public_website, "Auf öffentlicher Website veröffentlichen"

    - if post.sent_at
      .card
        .card-header
          %h3.mb-0 Sendebericht
        .card-body
          %label.form-label Versandt am
          = localize post.sent_at

          %label.form-label.mt-3 Zugestellt an
          .avatar-list.avatar-list-stacked.d-block
            - post.deliveries.sent.each do |delivery|
              = link_to delivery.user, class: 'avatar' do
                = user_avatar delivery.user

          %label.form-label.mt-3 Konnte nicht zustellen an
          .avatar-list.avatar-list-stacked.d-block
            - post.deliveries.failed.each do |delivery|
              = link_to delivery.user, class: 'avatar' do
                = user_avatar delivery.user
