.table-responsive
  %table.members.child_users.datatable.display.table.card-table.table-vcenter
    %thead
      %tr
        %th &nbsp;
        %th=t :last_name
        %th=t :first_name
        %th=t :name_affix
        -#- if show_status_column = member_table_rows.collect { |row| row[:status] }.any?
        %th=t :status
        %th.has_tooltip{title: "Die Spalte 'Seit' zeigt an, seit wann die Person in der Liste '#{group.name}' gef√ºhrt wird.", data: {placement: 'left'}} Seit
    %tbody
      - member_table_rows.each do |row|
        %tr.member{data: {profile_fields: row[:address_fields_json]}}
          %td.w-1
            %span.avatar{style: "background-image: url(#{row[:avatar_path]})"}
          %td
            %strong= link_to row[:last_name], user_path(id: row[:user_id])
          %td= row[:first_name]
          %td= row[:name_affix]
          -# if show_status_column
          %td
            - if row[:status]
              = link_to row[:status], group_members_path(group_id: row[:status_group_id])
          %td.text-nowrap.text-muted= localize row[:joined_at].to_date if row[:joined_at]
