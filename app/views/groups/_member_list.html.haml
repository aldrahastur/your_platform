%table.members.child_users.datatable.display
  %thead
    %tr
      %th=t :last_name
      %th=t :first_name
      %th Aktivitätszahl
      %th.has_tooltip{title: "Die Spalte 'Seit' zeigt an, seit wann die Person in der Liste '#{@group.name}' geführt wird.", data: {placement: 'left'}} Seit
  %tbody
    - for membership in memberships do
      %tr.member{data: {profile_fields: membership.user.address_fields_json}}
        %td
          %strong= link_to membership.user.last_name, membership.user
        %td= membership.user.first_name
        %td= membership.user.name_affix
        %td= localize(membership.valid_from.to_date) if membership.valid_from
