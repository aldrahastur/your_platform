- attachments ||= event.attachments
- image_attachments = attachments.find_by_type("image")
- other_attachments = attachments - image_attachments

#attachments.attachments
  - if other_attachments.count > 0
    = render partial: 'attachments/documents', locals: {attachments: other_attachments, parent: event}

  - if event.attachments.find_by_type("image").count > 0
    = render partial: 'attachments/pictures', locals: {attachments: image_attachments}

  = render partial: 'attachments/drop_field', locals: {parent: event}
