- # locals:
- structureable
- limit ||= 1000

%h1.officers{id: "officers-box-for-#{structureable.id}"}= t :officers
%div
  %ul.officers
    - sorted_officers_groups_for(structureable).first(limit).each do |officer_group|
      %li
        .office= officer_group.name
        .officer= user_links officer_group.members
