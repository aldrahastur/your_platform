- notification || raise('no notification given')

- case notification.reference_type
- when 'Post'
  = render partial: 'notifications/post_notification', locals: {notification: notification}
- when 'Comment'
  = render partial: 'notifications/comment_notification', locals: {notification: notification}
- when 'User'
  = render partial: 'notifications/user_status_notification', locals: {notification: notification}
- when 'Group'
  = render partial: 'notifications/welcome_notification', locals: {notification: notification}
- else
  - raise('notification type not handled, yet.')
