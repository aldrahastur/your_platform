%div{style: 'font-family: Helvetica'}
  %p= @user.greeting
  %p= t(:you_have_n_unread_notifications, n: @notifications.count)
  
  %ul
    - @notifications.each do |notification|
      %li{style: 'list-style: none; margin-bottom: 20px; margin-top: 20px'}
        %div{style: 'float: left; margin-right: 10px'}
          = user_avatar(notification.author)
        %div{style: 'overflow: hidden'}
          %small
            = link_to notification.author.title, notification.author
            = localize(notification.created_at)
          %p
            %strong= link_to notification.message, notification.reference_url
          %p= markdown notification.text

%hr

%small= "#{t(:notification_service)}, #{app_name}, #{localize(Time.zone.now)}"