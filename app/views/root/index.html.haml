- # We render the vertical nav within this view to save some space.
- # Therefore, deactivate the vertical nav in the layout.
- @hide_vertical_nav = true
- @hide_footer = true

.row
  .root_view_switcher.pull-right
    = t :change_view
    %a{href: '?view_setting=timeline'} Timeline
    |
    %a{href: '?view_setting=social'} Social

= render partial: 'root/timeline_view' if @view_setting == 'timeline'
= render partial: 'root/social_view' if @view_setting == 'social'

