.flex-fill.d-flex.flex-column.justify-content-center
  .container-tight.py-6
    .text-center.mb-4
      %img{:alt => "", :height => "36", :src => logo_url}/
      %strong= AppVersion.app_name

    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      .card.card-md
        .card-body
          %h2.mb-5.text-center= t :forgot_password
          .mb-3
            = render partial: 'devise/shared/error_messages'
          .mb-2
            = f.label :email, t(:email), class: 'form-label'
            .input-group.input-group-flat
              = f.email_field :email, autofocus: true, placeholder: t(:email), class: 'form-control'
          .form-footer
            %button.btn.btn-primary.btn-block{:type => "submit"}= t :submit_send_instructions

      .text-center.text-muted
        = render 'devise/shared/links'
