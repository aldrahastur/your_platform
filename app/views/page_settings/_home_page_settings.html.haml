- home_page || raise(ActionController::ParameterMissing, 'no home_page given.')

%table.settings.home_page_settings
  %tr
    %th= t :horizontal_nav
    %td.show_in_menu
      - ([home_page] + home_page.child_pages).each do |p|
        %p= ajax_check_box p, :show_in_menu, p.title
  %tr.layout
    %th= t :layout
    %td= setting_in_place home_page, :layout # , as: :select, collection: permitted_layouts # FIXME
  %tr.home_page_title
    %th= t :home_page_title
    %td= setting_in_place home_page, :home_page_title
  %tr.home_page_sub_title
    %th= t :home_page_sub_title
    %td= setting_in_place home_page, :home_page_sub_title
  %tr.scroll_over_to_start_page
    %th= t :scroll_over_to_start_page
    %td= setting_check_box home_page, :scroll_over_to_start_page, t(:scroll_over_to_start_page_after_content_end)