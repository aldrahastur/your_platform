- home_page || raise('no home_page given.')

%table.settings.home_page_settings
  %tr
    %th Horizontales Menü
    %td.show_in_menu
      - ([home_page] + home_page.child_pages).each do |p|
        %p= ajax_check_box p, :show_in_menu, p.title
  %tr
    %th Layout
    %td= best_in_place home_page, :layout
  %tr
    %th Home-Page-Überschrift
    %td
      %p= best_in_place home_page, :home_page_title
      %p Wenn das Layout es unterstützt, wird dies ...
  %tr
    %th Home-Page-Untertitel
    %td= best_in_place home_page, :home_page_sub_title
